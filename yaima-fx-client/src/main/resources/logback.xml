<configuration>
    <!-- Console appender with colors like Spring Boot -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread]
                %highlight(%-5level)        <!-- log level with colors -->
                %cyan(%logger{36}) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
